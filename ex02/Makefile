NAME = Array

SRCS = main.cpp

CC = c++

CFLAGS = -Wall -Wextra -Werror -std=c++98

MY_OBJECTS = $(SRCS:.cpp=.o)

GREEN = \033[1;32m
PINK = \033[1;35m
RED = \033[1;31m
RESET = \033[0m

.cpp.o:
	@echo "$(PINK)Linking... ðŸ’­â€‹â€‹$(RESET) $(GREEN)$<$(RESET)"
	@$(CC) $(CFLAGS) -c -o $@ $<

$(NAME): $(MY_OBJECTS)
	@echo "$(PINK)Compiled âœ…â€‹ðŸ¥‡â€‹â€‹$(RESET) $(GREEN)$(NAME)$(RESET)"
	@$(CC) $(CFLAGS) -o $(NAME) $(MY_OBJECTS)

all: $(NAME)

clean:
	@echo "$(RED)Cleaning object files... ðŸš¸â€‹â€‹$(RESET)"
	@rm -f $(MY_OBJECTS)

fclean: clean
	@echo "$(RED)Removing executable... ðŸš¸â€‹â€‹$(RESET)"
	@rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re